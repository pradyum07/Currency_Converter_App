<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:src="@drawable/currencytheme"
        android:layout_alignParentTop="true"
        android:id="@+id/img"/>
    <TextView
        android:id="@+id/fromtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FROM"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="@android:color/holo_orange_light"/>
    <Spinner
        android:id="@+id/spinfrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fromtxt"
        android:gravity="center"
        android:padding="6dp"
        android:textAlignment="center"
        android:elevation="10dp"
        android:popupBackground="@android:color/holo_orange_light"
        android:background="@android:color/holo_green_dark"/>
    <TextView
        android:id="@+id/totxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO"
        android:layout_below="@+id/spinfrom"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="@android:color/holo_orange_light"/>
    <Spinner
        android:id="@+id/spinto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totxt"
        android:gravity="center"
        android:textAlignment="center"
        android:elevation="10dp"
        android:padding="6dp"
        android:popupBackground="@android:color/holo_orange_light"
        android:background="@android:color/holo_green_dark"/>
    <EditText
        android:id="@+id/edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinto"
        android:layout_marginTop="20dp"
        android:hint="Enter the Amount to be converted"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:backgroundTint="@android:color/holo_orange_dark"/>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_below="@+id/edittxt"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_green_dark"
        android:onClick="convert"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result Appears Here"
        android:layout_below="@+id/btn"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>


</RelativeLayout>